{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	- Accueil
{% endblock %}

{% block content %}
	<main class="container-fluid">
		<!-- amusement section -->
		<section class="amusement-home container-fluid m-0 text-center">
			<h1 class="section-title mx-auto mt-2 mb-5 px-3 bg-primary rounded-4">Attractions</h1>
			<div class="container mb-3">
				<div class="row justify-content-center">
					{% for amusement in amusements %}
						<article class="col-lg-3 col-md-6 mb-2">
							<div class="card d-flex justify-content-between shadow">
								<div class="card-title align-self-center my-2">{{ amusement.name }}</div>
								<img src="{{ constant('APP_UPLOAD_PATH') ~ amusement.image }}" alt="{{ amusement.name }}" onerror="this.src='assets/images/1200x900_placeholder.png';" class="card-img-bottom rounded-0">
							</div>
						</article>
					{% endfor %}
				</div>
			</div>
			<a class="btn btn-primary mx-auto px-4 mb-5 rounded-4" href="/attractions" role="button">En savoir plus</a>
		</section>
	</main>
{% endblock %}

