{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="assets/css/cafeteria.css">
{% endblock %}

{% block title %}
	{{ parent() }}
	- Cafétéria
{% endblock %}

{% block header %}
	<header class="p-0">
		<div class="row m-0 p-0">
			<img class="img_cafet p-0" src="assets/images/Cafet-1.webp" alt="">
		</div>
		<div class="text-center my-5">
			<h3>Cafétéria</h3>
			<h4>Bar & Snack</h4>
			<div class="row m-0 p-0">
				<p class="col-md-6 offset-md-3">Un espace bar et salon de thé permet aux adultes comme aux enfants de boire une boisson froide ou chaude. Un snack permet de faire goûter les enfants. Les adultes pourront également bénéficier de petits encas.
				</p>
			</div>
		</div>
	</header>
{% endblock %}

{% block content %}
	<main class="container">
		<div class="row m-0 p-0 justify-content-around">
			<div class="bg-primary-light col-lg-4 p-4 m-2 shadow rounded-4">
				<table class="w-100">
					<thead>
						<tr>
							<h4 class="text-center">Boissons</h4>
						</tr>
					</thead>
					{% for boisson in boissons %}
						<tr>
							<td class="py-3">{{ boisson.name }}</td>
							<td class="text-end">{{ boisson.price }}
								€</td>
						</tr>
					{% endfor %}
				</table>
			</div>

			<div class="bg-primary-light col-lg-4 p-4 m-2 shadow rounded-4">
				<table class="w-100">
					<thead>
						<tr>
							<h4 class="text-center">Snacks</h4>
						</tr>
					</thead>
					{% for snack in snacks %}
						<tr>
							<td class="py-3">{{ snack.name }}</td>
							<td class="text-end">{{ snack.price }}
								€</td>
						</tr>
					{% endfor %}
				</table>
			</div>
		</div>
	</main>

{% endblock %}
