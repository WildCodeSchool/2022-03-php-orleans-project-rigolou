{% extends 'adminLayout.html.twig' %}

{% block title %}
	{{ parent() }}
	- Tarifs - {{ details[0].description }}
{% endblock %}


{% block content %}
	<main class="container-fluid py-5">
        <div class="d-flex justify-content-between w-50 mx-auto pb-3 px-2">
            <h1>Ajouter dans {{ details[0].description }}</h1>
            <div class="d-flex flex-column-reverse">
                <a href="/admin/anniversaire" class="btn btn-dark w-fit d-flex gap-2 align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                    </svg>
                    Retour
                </a>
            </div>
        </div>
        {% include "Admin/AnniversaryDetail/_table.html.twig" with {
            'inputLabel': 'Nouveau',
            'buttonColor': 'info',
			'buttonIcon': '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>',
			'buttonLabel': 'Ajouter'
            }%}
	</main>
{% endblock %}
