{% extends 'adminLayout.html.twig' %}

{% block title %}
	{{ parent() }}
	- Attractions
{% endblock %}


{% block content %}
	<main class="container-fluid py-5">
		<h1>Liste des attractions</h1>
        <div class="w-75 mx-auto mb-3 mt-5">
            <a href="/admin/attractions/ajouter" class="btn btn-info w-fit d-flex gap-2 align-items-center">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
					<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
				</svg>
				Ajouter
			</a>
        </div>
		<table class="table table-hover w-75 mx-auto">
			<thead class="table-light">
				<tr>
					<th scope="col">Nom</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for amusement in amusements %}
                    <tr>
					    <td class="align-middle w-75">{{ amusement.name }}</td>
                        <td>
							<a href="/admin/attractions/modifier?id={{ amusement.id }}" class="btn btn-warning w-fit d-flex gap-2 align-items-center">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
								</svg>
								modifier
							</a>
						</td>
                        <td>
							<form action="/admin/attractions/supprimer?id={{ amusement.id }}" method="post">
								<button class="btn btn-danger w-fit d-flex gap-2 align-items-center">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-square" viewBox="0 0 16 16">
										<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
										<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
									</svg>
									supprimer
								</button>
							</form>
						</td>
                    </tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
