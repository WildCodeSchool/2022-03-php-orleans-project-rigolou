<form class="w-75 mx-auto mt-3" action="" method="post" enctype="multipart/form-data">
    {% if errors is not empty %}
        <div class="alert alert-danger">
            {% for error in errors %}
                <p class="m-0">- {{error}}</p>
            {% endfor %}
        </div>
    {% endif %}
    <label for="name" class="form-label">Nom</label>
    <input type="text" class="form-control" name="name" id="name" value="{% if amusementItems is not empty %}{{amusementItems.name}}{% endif %}" required>
    <label for="image" class="form-label mt-4">Image (1mo maximum | format jpeg, png, webp ou gif)</label>
    <input type="file" class="form-control" name="image" id="image" required>
    <label for="description" class="form-label mt-4">Description</label>
    <textarea class="form-control" name="description" id="description" rows="6" required>{% if amusementItems is not empty %}{{- amusementItems.description -}}{% endif %}</textarea>
    <button class="btn btn-info w-fit d-flex gap-2 align-items-center mt-2">
        {{ buttonSvg|default('<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>')|raw }}
        {{ buttonName|default('Ajouter')}}
    </button>
</form>