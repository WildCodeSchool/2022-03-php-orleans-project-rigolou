<form class="w-50 mx-auto mt-3" action="" method="post">
	{% if errors is not empty %}
		<div class="alert alert-danger px-3">
			<ul class="m-0">
				{% for error in errors %}
					<li>{{error}}</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}
	<label for="category" class="form-label">Cat√©gorie</label>
	<select name="category" id="category" class="form-select">
		{% for category in categories %}
			<option value="{{ category.id }}" {% if rates.category == category.id %} default {% endif %}>
				{{ category.category }}
			</option>
		{% endfor %}
	</select>
	<label for="description" class="form-label mt-4">Description</label>
	<input type="text" name="description" id="description" class="form-control" value="{{ rates.description }}" required>
	<label for="price" class="form-label mt-4">Prix</label>
	<input type="text" name="price" id="price" class="form-control" value="{{ rates.price }}" required>
	<button class="btn btn-{{ buttonColor }} w-fit d-flex gap-2 align-items-center mt-3">{{ buttonIcon|raw }}{{ buttonLabel }}</button>
	<a class="btn btn-danger mt-2" href="/admin/tarifs">RETOUR</a>

</form>
