<form class="w-50 mx-auto mt-3" action="" method="post">
	{% if errors is not empty %}
		<div class="alert alert-danger px-3">
			<ul class="m-0">
				{% for error in errors %}
					<li>{{error}}</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}
	<label for="category" class="form-label">Cat√©gorie</label>
	<select name="category" id="category" class="form-select">
		{% for category in categories %}
			<option value="{{ category.id }}" {% if rates.category == category.id %} default {% endif %}>
				{{ category.category }}
			</option>
		{% endfor %}
	</select>
	<label for="description" class="form-label mt-4">Description</label>
	<input type="text" name="description" id="description" class="form-control" value="{{ rate.description }}" required>
	<label for="price" class="form-label mt-4">Prix</label>
	<input type="text" name="price" id="price" class="form-control" value="{{ rate.price }}" required>
	<div class="d-flex justify-content-between">
		<button class="btn btn-{{ buttonColor }} w-fit d-flex gap-2 align-items-center mt-2">{{ buttonIcon|raw }}{{ buttonLabel }}</button>
		<a href="/admin/tarifs" class="btn btn-dark w-fit d-flex gap-2 align-items-center mt-2">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewbox="0 0 16 16">
				<path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
			</svg>
			Retour
		</a>
	</div>
</form>
