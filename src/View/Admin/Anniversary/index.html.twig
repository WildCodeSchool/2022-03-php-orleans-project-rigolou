{% extends 'adminLayout.html.twig' %}

{% block title %}
	{{ parent() }}
	- Réservations
{% endblock %}


{% block content %}
	<main class="container-fluid py-5">

		<h1 class = "mb-5 text-center">Liste des réservations</h1>      

		<table class="table table-hover w-75 mx-auto ">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Date </th>
                    <th scope="col"></th>   
                    <th scope="col"></th>
                </tr>   
            </thead>
            <tbody>                    
            


                {% for item in anniversaryItems %}
                    <tr>

                         <td class="text-nowrap">
                        {{ item.firstname }}
                        </td>
                         <td class="text-nowrap">   
                        {{ item.lastname }}
                        </td> 
                        <td class="text-nowrap">   
                        {{ item.phone }}
                        </td>                       
                        <td class="w-100">
                        {{ item.reservation_date }}
                        </td>
                        <td>
                            <a href="/admin/{{ section }}/modifier?id={{ item.id }}" class="btn btn-warning w-fit d-flex gap-2 align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-card-checklist" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                    <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
                                </svg>
                                détails
                            </a>
                        </td>
                        <td>
                            <form action="/admin/reservations/supprimer" method="post" onsubmit="return confirm('Confirmer la suppression ?');">
                                <input type="hidden" name="id" value="{{ item.id }}">
                                <button class="btn btn-danger w-fit d-flex gap-2 align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                        <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                    </svg>
                                    supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
	</main>
{% endblock %}
