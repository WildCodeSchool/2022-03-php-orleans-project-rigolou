{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	- Anniversary
{% endblock %}

{% block content %}
	<main class="container-fluid">
		<h1 class="text-center mb-5">Réservation</h1>

		<div class="container-fluid">
			<form method="post" accept-charset="UTF-8">
				<label for="exampleFormControlInput1" class="form-label">Sélectionner une formule :</label>
				<select class="form-select" aria-label="Default select example">
					<option value="1">Formule anniversaire Triceratopss</option>
					<option value="2">Formule anniversaire Diplodocus</option>

				</select>
				<div>
					<label for="exampleFormControlInput1" class="form-label">Prénom:</label>
					<input class="form-control" type="text" placeholder="Patrique" aria-label="default input example">
				</div>
				<div>
					<label for="exampleFormControlInput1" class="form-label">Nom :</label>
					<input class="form-control" type="text" placeholder="Dupont" aria-label="default input example">
				</div>
				<div>
					<label for="exampleFormControlInput1" class="form-label">téléphone :</label>
					<input class="form-control" type="tel" id="phone" name"phone" pattern="^[0-9]{10}$" placeholder="06 50 22 34 65" aria-label="default input example">
				</div>
				<div class="mb-3">
					<label for="exampleFormControlInput1" class="form-label">Email address :</label>
					<input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
				</div>
				<div class="mb-3">
					<label for="exampleFormControlInput1" class="form-label">Date :</label>
					<input type="date" id="date" value="01/08/2015" class="form-control" >
				</div>
				<div class="mb-3">
					<label for="exampleFormControlTextarea1" class="form-label">Informations supplémentaires (exemple: nombre de personnes)</label>
					<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
				</div>

				{% if errors is defined %}
					<ul class="errors">
						{% for error in errors %}
							<li>{{ error }}</li>
						{% endfor %}
					</ul>
				{% endif %}

				<input class=" " type="submit" value="Réserver">
			</form>
		</div>


	</main>
{% endblock %}