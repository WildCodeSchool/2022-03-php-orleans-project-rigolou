{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="assets/css/amusements.css"> {% endblock %}

{% block title %}{{ parent() }} - Attractions{% endblock %}


{% block content %}

<main class="container-fluid amusement-home">
        <div class="row ">
			<div class="logo col-lg-6 p-5 mb-5 flex-column d-flex align-items-center ">
				<img class="w-50" src="assets/images/Logo.png" alt="Logo">
				<img class="w-50" src="assets/images/Title.png" alt="Title">
			</div>
			<div class="col-lg-6 p-5 mb-5 my-sm-4 flex-column d-flex align-items-center justify-content-center">
				<h1 class="text-dark">Voici toutes nos attractions  !</h1>
				<p class=" mt-5">
                Vous allez retrouver  toutes les attractions que notre air de jeux possède, avec une description de l'attraction et des images pour les représenter a vous de regardez  !!				
                </p>
			</div>
		</div>
    <section class ="">

        <h1 class="bg-primary section-title mx-auto mb-5 mt-5 px-3 rounded-4">Attractions</h1>

        {% for amusement in amusements %}
            <div class="container shadow rounded-4 bg-white mb-5 my-4">
                <div class="row amusement-card">
                    <div class="col-lg-9 d-flex flex-column {% if loop.index is even %} order-lg-2 ps-lg-0 {% else %} pe-lg-0{% endif %}">
                        <h2 class="text-center mt-3 text-success"> {{amusement.name}} </h2>
                        <div class="h-100 d-flex flex-column justify-content-center border-top border-dark">
                        <p class="text-md-center {% if loop.index is even %} text-lg-center {% else %} text-lg-center{% endif %} "> {{amusement.description}}
                        </p>
                        </div>
                    </div>
                    <div class="col-lg-3{% if loop.index is even %} order-lg-1 {% endif %}">
                        <img class="img-size rounded-4" src="{% if amusement.image is empty %}assets/images/placeholder.jpg{% else %}{{constant('APP_UPLOAD_PATH') ~ amusement.image}}{% endif %}"  alt="Nom de l'attraction">
                    </div>
                </div>
            </div>
     
        {% endfor %}
    </section> 
</main>
{% endblock %}